    version="2.3">
	<managed-bean>
		<managed-bean-name>patientService</managed-bean-name>
		<managed-bean-class>com.novus.hospital.entity.PatientService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>doctorService</managed-bean-name>
		<managed-bean-class>com.novus.hospital.entity.DoctorService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>departmentService</managed-bean-name>
		<managed-bean-class>com.novus.hospital.entity.DepartmentService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
		<managed-bean>
		<managed-bean-name>adminService</managed-bean-name>
		<managed-bean-class>com.novus.hospital.entity.AdminService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

